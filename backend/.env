TOURIST_DATABASE_URL=sqlite:////app/tourists.db
# === Blockchain settings ===
GANACHE_URL=http://ganache:8545

# If you want backend to sign transactions itself, provide a private key:
# Example: take one of Ganache's accounts (export from GUI/CLI)
PRIVATE_KEY=0x6cbed15c793ce57650b9877cf6fa156fbef513c4e6134f022a85b1ffdd59b2a1  # <-- put real Ganache private key here
DEPLOYER_ADDRESS=0xFFcf8FDEE72ac11b5c542428B35EEF5769C409f0

# If not set, backend will fallback to the first unlocked Ganache account.

# Optional override of contract address (usually not needed if artifacts are correct)
TOURIST_REGISTRY_ADDRESS=0xCfEB869F69431e42cdB54A4F4f105C19C080A601

# === Logging ===
LOG_LEVEL=INFO

# === KYC / Encryption ===
# Base64-encoded 32-byte master key (required in dev mode for encrypt_blob/decrypt_blob)
KYC_MASTER_KEY_BASE64=OaVF9QSIb+8sb1fJYWU5kl4XdcG4H/w2dDuRpopdLA0=

# Use AWS/GCP/Azure KMS in prod (currently not implemented, defaults to dev mode)
KYC_USE_KMS=false

# === IPFS ===
# Local IPFS daemon API (backend -> IPFS container or host)
IPFS_API_URL=http://ipfs:5001/api/v0

# Optional: nft.storage or Pinata API key for pinning
IPFS_PIN_SERVICE=

# === Firebase Cloud Messaging (for zones.py push notifications) ===
